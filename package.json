  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "browser-sync": "^2.18.12",
    "coffee-loader": "^0.7.3",
    "coffee-script": "^1.12.6",
    "cssnano": "^3.10.0",
    "expose-loader": "^0.7.3",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.3",
    "nucleus-styleguide": "^1.1.1",
    "postcss-cli": "^4.1.0",
    "webpack": "^3.0.0"
  },
  "scripts": {
    "all": "yarn run cs",
    "watch": "echo TODO watch css, js, browser-sync",
    "cs": "yarn run css:scss && yarn run css:postcss",
    "css:scss": "node-sass assets/scss/app.scss public/css/app.css --source-map public/css/app.css.map",
    "css:postcss": "postcss -r public/css/app.css -u autoprefixer cssnano",
    "postcss:help": "postcss -h",
    "styleguide": "nucleus",
    "js": "webpack -- assets/js/coffee/*.coffee public/js/bundle.js",
    "bs": "browser-sync start --config bs-config.js",
    "test": "echo test"
  },
  "dependencies": {}
}
